<% @survey.questions.each do |question| %>
        <li>
          <p><%= question.text %></p>
          <%= hidden_field_tag :question_id, :value => question.id %>
          <% question.options.each do |option| %>
            <%= check_box_tag "question[option_id[]]",  option.id, nil %>
            <%= option.text %> <br/ >
          <% end -%>
        </li>
        </br>
        <%= submit_tag "Select Answer" %>
        <hr>
      <% end -%>
